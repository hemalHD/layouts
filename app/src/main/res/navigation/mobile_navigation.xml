<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.linearlayout.ui.LinearFragment"
        android:label="@string/title_linear"
        tools:layout="@layout/fragment_linear" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.linearlayout.ui.RelativeFragment"
        android:label="@string/title_relative"
        tools:layout="@layout/fragment_relative" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.linearlayout.ui.CoordinateFragment"
        android:label="@string/title_coordinate"
        tools:layout="@layout/fragment_coordiante" />
    <fragment
        android:id="@+id/navigation_constraint"
        android:name="com.example.linearlayout.ui.ConstraintFragment"
        android:label="@string/title_coordinate"
        tools:layout="@layout/fragment_coordiante" />
</navigation>